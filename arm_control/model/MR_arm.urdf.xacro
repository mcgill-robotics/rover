<?xml version="1.0" ?>

<robot name="mr_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="MR_arm" params="parent_link *joint_pose">
    <!-- Base link is the center of the robot's bottom plate -->
    
    <joint name="MR_arm_joint" type="fixed">
			<parent link="${parent_link}" />
			<child link="link_0" />
			<xacro:insert_block name="joint_pose" />
		</joint>
    
    <link name="link_0">
      <inertial>
          <mass value="0.1" />
          <origin xyz="0 0 0" rpy="0 0 0" />
          <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
          <gravity>0</gravity>
          <self_collide>1</self_collide>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://arm_control/model/meshes/Link0.stl" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://arm_control/model/meshes/collision_Link0.stl" />
        </geometry>
      </collision>
    </link>

    <joint name="joint_1" type="continuous">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="link_0" />
      <child link="link_1" />
      <axis xyz="0 0 1" />
      <limit effort="10.0" velocity="2.61799" lower="-3.141592" upper="3.141592" />
      <dynamics damping="0.5"/>
    </joint>

